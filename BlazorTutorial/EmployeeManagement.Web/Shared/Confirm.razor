@if (ShowConfirmation)
{
    <div class="modal @(@ShowConfirmation? "show" : "")" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@ConfirmationTitle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="@(() => OnConfirmationChange(false))">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>@ConfirmationMessage</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" @onclick="@(() => OnConfirmationChange(true))">Delete</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="@(() => OnConfirmationChange(false))">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

