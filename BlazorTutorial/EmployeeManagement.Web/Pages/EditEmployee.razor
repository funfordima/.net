@page "/edit-employee/{id}"
@page "/edit-employee"

@using EmploeeManagement.Models

@if (EditEmployeeModel == null)
{
    <div class="spinner"></div>
}
else
{
    <EditForm Model="@EditEmployeeModel" OnValidSubmit="handleSubmitForm">
        <ObjectGraphDataAnnotationsValidator />
        <h3>@HeaderText</h3>
        <hr />
        <ValidationSummary />

        <div class="form-group row mb-2">
            <label class="col-sm-2 col-form-label" for="firstName">
                First Name
            </label>
            <div class="col-sm-10">
                <InputText id="firstName" class="form-control" placeholder="First Name" @bind-Value="@EditEmployeeModel.FirstName" />
                <ValidationMessage For="@(() => EditEmployeeModel.FirstName)" />
            </div>
        </div>
        <div class="form-group row mb-2">
            <label class="col-sm-2 col-form-label" for="lastName">
                Last Name
            </label>
            <div class="col-sm-10">
                <InputText id="lastName" class="form-control" placeholder="Last Name" @bind-Value="@EditEmployeeModel.LastName" />
                <ValidationMessage For="@(() => EditEmployeeModel.LastName)" />
            </div>
        </div>

        <div class="form-group row mb-2">
            <label class="col-sm-2 col-form-label" for="email">
                Email
            </label>
            <div class="col-sm-10">
                <InputText id="email" class="form-control" placeholder="Email" @bind-Value="@EditEmployeeModel.Email" />
                <ValidationMessage For="@(() => EditEmployeeModel.Email)" />
            </div>
        </div>

        <div class="form-group row mb-2">
            <label class="col-sm-2 col-form-label" for="confirmEmail">
                Email
            </label>
            <div class="col-sm-10">
                <InputText id="confirmEmail" class="form-control" placeholder="Confirm Email" @bind-Value="@EditEmployeeModel.ConfirmEmail" />
                <ValidationMessage For="@(() => EditEmployeeModel.ConfirmEmail)" />
            </div>
        </div>

        <div class="form-group row mb-2">
            <label class="col-sm-2 col-form-label" for="department">
                Department
            </label>
            <div class="col-sm-10">
                <InputSelect id="department" class="form-control" @bind-Value="@EditEmployeeModel.DepartmentId">
                    @foreach (var dept in Departments)
                    {
                    <option value="@dept.DepartmentId">@dept.DepartmentName</option>
                    }
                </InputSelect>
            </div>
        </div>

        <div class="form-group row mb-2">
            <label class="col-sm-2 col-form-label" for="gender">
                Gender
            </label>
            <div class="col-sm-10">
            <InputSelect id="gender" class="form-control" @bind-Value="@EditEmployeeModel.Gender">
                    @foreach (var gender in Enum.GetValues(typeof(Gender)))
                        {
                            <option value="@gender">@gender</option>
                        }
            </InputSelect>
            </div>
        </div>

        <div class="form-group row mb-2">
            <label class="col-sm-2 col-form-label" for="dateOfBirth">
                Date of Birth
            </label>
            <div class="col-sm-10">
                <InputDate id="dateOfBirth" class="form-control" @bind-Value="@EditEmployeeModel.DateOfBirth" />
            </div>
        </div>

        <div class="form-group row mb-2">
            <label class="col-sm-2 col-form-label" for="departmentName">
                Department Name
            </label>
            <div class="col-sm-10">
                <InputText id="departmentName" class="form-control" placeholder="Department Name" @bind-Value="@EditEmployeeModel.Department.DepartmentName" />
                <ValidationMessage For="@(() => EditEmployeeModel.Department.DepartmentName)" />
            </div>
        </div>

        <button class="btn btn-primary" type="submit">Submit</button>

        @if (EditEmployeeModel.EmployeeId > 0)
        {
            <button class="btn btn-danger" type="button" @onclick="confirmDelete">Delete</button>
        }
    </EditForm>

    <Confirm @ref="DeleteConfirmation" ConfirmationChanged="handleDelete"></Confirm>
}

